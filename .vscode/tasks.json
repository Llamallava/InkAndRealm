{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-server",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/InkAndRealm.Server/InkAndRealm.Server.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-client",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/InkAndRealm.Client/InkAndRealm.Client.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-all",
      "dependsOn": ["build-server", "build-client"]
    },
    {
      "label": "watch-server",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/InkAndRealm.Server/InkAndRealm.Server.csproj"
      ],
      "problemMatcher": "$msCompile"
    }
  ]
}