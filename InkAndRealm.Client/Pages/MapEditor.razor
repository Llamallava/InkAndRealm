        _areaLayers.Sort((left, right) =>
        {
            var indexCompare = left.LayerIndex.CompareTo(right.LayerIndex);
            return indexCompare != 0 ? indexCompare : string.CompareOrdinal(left.LayerKey, right.LayerKey);
        });
    }

