@page "/map-demo/{MapId:int}"
@using System
@using System.Net.Http.Json
@using System.Linq
@using Microsoft.AspNetCore.Components.Web
@using InkAndRealm.Shared
@using InkAndRealm.Client.State
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject UserState UserState
@implements IDisposable

<PageTitle>Ink & Realm Map Editor</PageTitle>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h1 class="mb-0">Map Editor</h1>
        <button class="btn btn-outline-secondary" @onclick="GoHome">
            Back to Start
        </button>
    </div>

    <p class="text-muted">
        Click on the canvas to place the selected feature. Changes stay local until you save all.
    </p>

    <div class="d-flex gap-3 align-items-start flex-wrap">
        <div class="border rounded shadow-sm p-2 bg-white">
            <canvas id="@CanvasId"
                    width="640"
                    height="360"
                    class="border"
                    @onmousedown="HandlePointerDown"
                    @onmousemove="HandlePointerMove"
                    @onmouseup="HandlePointerUp"
                    @onmouseleave="HandlePointerLeave">
            </canvas>
        </div>

        <div class="flex-grow-1">
            <div class="mb-3">
                <div><strong>Last Placement:</strong></div>
                <div>@(_hasLastPlacement ? $"{_lastX:0}, {_lastY:0}" : "Click the canvas to place a feature.")</div>
            </div>

            <div class="mb-3">
                <div><strong>Unsaved Items:</strong></div>
                <div>@PendingCount</div>
            </div>

            <div class="mb-3">
                <div><strong>Active Tool:</strong></div>
                <div class="btn-group flex-wrap" role="group" aria-label="Tool selection">
                    @foreach (var tool in ToolDefinitions)
                    {
                        <button class="btn @(_activeTool == tool.Tool ? "btn-primary" : "btn-outline-primary")"
                                @onclick="() => SelectTool(tool.Tool)">
                            @tool.Label
                        </button>
                    }
                </div>
                <div class="form-text">@ActiveToolSummary</div>
            </div>

            <div class="mb-3">
                <div><strong>Active Area Layer:</strong></div>
                <div>@ActiveAreaLayerLabel (fixed for now)</div>
            </div>

            <div class="mb-3">
                <div><strong>Placement Type:</strong></div>
                <div class="btn-group" role="group" aria-label="Feature placement selection">
                    <button class="btn @( _placementType == PlacementType.Tree ? "btn-primary" : "btn-outline-primary")"
                            @onclick="() => SelectPlacement(PlacementType.Tree)">
                        Tree
                    </button>
                    <button class="btn @( _placementType == PlacementType.House ? "btn-primary" : "btn-outline-primary")"
                            @onclick="() => SelectPlacement(PlacementType.House)">
                        House
                    </button>
                </div>
            </div>

            <div class="mb-3">
                <div><strong>Style:</strong></div>
                @if (_placementType == PlacementType.Tree)
                {
                    <select class="form-select" @bind="_selectedTreeStyle">
                        @foreach (var style in TreeStyles)
                        {
                            <option value="@style">@style</option>
                        }
                    </select>
                }
                else if (_placementType == PlacementType.House)
                {
                    <select class="form-select" @bind="_selectedHouseStyle">
                        @foreach (var style in HouseStyles)
                        {
                            <option value="@style">@style</option>
                        }
                    </select>
                }
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary"
                        disabled="@(PendingCount == 0 || _isSaving || !IsLoggedIn || !_hasMap)"
                        @onclick="SaveEditsAsync">
                    Save All
                </button>
                <button class="btn btn-outline-secondary"
                        disabled="@(_isLoading)"
                        @onclick="ReloadAsync">
                    Reload Map
                </button>
            </div>

            @if (!string.IsNullOrWhiteSpace(_statusMessage))
            {
                <div class="alert alert-info mt-3">@_statusMessage</div>
            }
        </div>
    </div>
</div>

@code {
    private const string CanvasId = "map-demo-canvas";
    private List<TreeFeatureDto> _trees = new();
    private List<HouseFeatureDto> _houses = new();
    private readonly List<TreeFeatureDto> _stagedTrees = new();
    private readonly List<HouseFeatureDto> _stagedHouses = new();
    private float _lastX;
    private float _lastY;
    private bool _hasLastPlacement;
    private bool _isLoading;
    private bool _isSaving;
    private bool _hasMap;
    private string _statusMessage = string.Empty;
    private bool IsLoggedIn => UserState.CurrentUser is not null;
    private PlacementType _placementType = PlacementType.Tree;
    private string _selectedTreeStyle = "Oak";
    private string _selectedHouseStyle = "Cottage";
    private MapToolType _activeTool = MapToolType.Point;
    private readonly List<AreaLayerDto> _areaLayers = new();
    private AreaLayerDto? _activeAreaLayer;
    private AreaStrokeDto? _activeStroke;
    private bool _isDrawing;
    private readonly List<AreaStrokeDto> _stagedWaterStrokes = new();
    private int PendingCount => _stagedTrees.Count + _stagedHouses.Count + _stagedWaterStrokes.Count;
    [Parameter] public int MapId { get; set; }
    private const float BrushRadius = 18f;
    private static readonly IReadOnlyList<string> TreeStyles = new List<string>
    {
        "Oak",
        "Pine",
        "Birch",
        "Palm"
    };
    private static readonly IReadOnlyList<string> HouseStyles = new List<string>
    {
        "Cottage",
        "Cabin",
        "Manor"
    };
    private static readonly IReadOnlyList<ToolDefinition> ToolDefinitions = new List<ToolDefinition>
    {
        new(MapToolType.Point, "Point", "Place one feature per click.", true),
        new(MapToolType.Brush, "Brush", "Paint features while dragging across the map.", true),
        new(MapToolType.Polygon, "Polygon", "Fill a polygonal area with a feature.", false),
        new(MapToolType.Eraser, "Eraser", "Remove a feature from the map.", false),
        new(MapToolType.Edit, "Edit", "Move or update an existing feature.", false),
        new(MapToolType.Duplicate, "Duplicate", "Clone an existing feature.", false),
        new(MapToolType.Undo, "Undo", "Undo the most recent change.", false)
    };
    private ToolDefinition ActiveToolDefinition => ToolDefinitions.First(tool => tool.Tool == _activeTool);
    private string ActiveToolSummary => ActiveToolDefinition.IsImplemented
        ? ActiveToolDefinition.Description
        : $"{ActiveToolDefinition.Description} (coming soon).";
    private string ActiveAreaLayerLabel => _activeAreaLayer?.FeatureType ?? "None";

    protected override async Task OnInitializedAsync()
    {
        UserState.Changed += OnUserChanged;
        EnsureAreaLayers();
        await LoadMapAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await DrawAsync();
        }
    }

    private async Task HandlePointerDown(MouseEventArgs args)
    {
        if (!ActiveToolDefinition.IsImplemented)
        {
            _statusMessage = $"{ActiveToolDefinition.Label} tool is not available yet.";
            return;
        }

        if (_activeTool == MapToolType.Point)
        {
            await HandlePointToolAsync(args);
            return;
        }

        if (_activeTool == MapToolType.Brush)
        {
            StartBrushStroke(args);
            await DrawAsync();
            return;
        }

        _statusMessage = $"{ActiveToolDefinition.Label} tool is not available yet.";
    }

    private async Task HandlePointerMove(MouseEventArgs args)
    {
        if (!_isDrawing || _activeTool != MapToolType.Brush || _activeStroke is null)
        {
            return;
        }

        AddBrushPoint((float)args.OffsetX, (float)args.OffsetY);
        await DrawAsync();
    }

    private async Task HandlePointerUp(MouseEventArgs args)
    {
        if (!_isDrawing || _activeTool != MapToolType.Brush)
        {
            return;
        }

        CommitBrushStroke();
        await DrawAsync();
    }

    private async Task HandlePointerLeave(MouseEventArgs args)
    {
        if (!_isDrawing || _activeTool != MapToolType.Brush)
        {
            return;
        }

        CommitBrushStroke();
        await DrawAsync();
    }

    private async Task HandlePointToolAsync(MouseEventArgs args)
    {
        _lastX = (float)args.OffsetX;
        _lastY = (float)args.OffsetY;
        _hasLastPlacement = true;

        if (_placementType == PlacementType.House)
        {
            _stagedHouses.Add(new HouseFeatureDto
            {
                X = _lastX,
                Y = _lastY,
                HouseType = _selectedHouseStyle
            });
            _statusMessage = $"Placed house at {_lastX:0}, {_lastY:0} (unsaved).";
        }
        else
        {
            _stagedTrees.Add(new TreeFeatureDto
            {
                X = _lastX,
                Y = _lastY,
                TreeType = _selectedTreeStyle
            });
            _statusMessage = $"Placed tree at {_lastX:0}, {_lastY:0} (unsaved).";
        }

        await DrawAsync();
    }

    private async Task SaveEditsAsync()
    {
        if (PendingCount == 0)
        {
            return;
        }

        if (!IsLoggedIn)
        {
            _statusMessage = "Please log in to save features to the map.";
            return;
        }

        if (!_hasMap)
        {
            _statusMessage = "Create a new map before saving features.";
            return;
        }

        _isSaving = true;
        var pendingCount = PendingCount;
        _statusMessage = $"Saving {pendingCount} item{(pendingCount == 1 ? string.Empty : "s")}...";

        var request = new MapEditsRequest
        {
            UserId = UserState.CurrentUser?.UserId,
            SessionToken = UserState.CurrentUser?.SessionToken,
            MapId = MapId,
            AddedTrees = new List<TreeFeatureDto>(_stagedTrees),
            AddedHouses = new List<HouseFeatureDto>(_stagedHouses),
            AddedWaterStrokes = new List<AreaStrokeDto>(_stagedWaterStrokes)
        };

        var response = await Http.PostAsJsonAsync("api/demo-map/edits", request);

        if (response.IsSuccessStatusCode)
        {
            var map = await response.Content.ReadFromJsonAsync<MapDto>();
            _trees = map?.Trees ?? new List<TreeFeatureDto>();
            _houses = map?.Houses ?? new List<HouseFeatureDto>();
            LoadAreaLayers(map);
            _stagedTrees.Clear();
            _stagedHouses.Clear();
            _stagedWaterStrokes.Clear();
            _statusMessage = $"Saved {pendingCount} item{(pendingCount == 1 ? string.Empty : "s")}.";
            await DrawAsync();
        }
        else
        {
            _statusMessage = "Failed to save changes.";
        }

        _isSaving = false;
    }

    private async Task ReloadAsync()
    {
        await LoadMapAsync();
        await DrawAsync();
    }

    private async Task LoadMapAsync()
    {
        _isLoading = true;
        _statusMessage = "Loading map from the server...";

        if (!IsLoggedIn)
        {
            _trees = new List<TreeFeatureDto>();
            _houses = new List<HouseFeatureDto>();
            _hasMap = false;
            ResetAreaLayers();
            ClearStaged();
            _statusMessage = "Log in, then return to Start to create a map.";
            _isLoading = false;
            return;
        }

        if (MapId <= 0)
        {
            _trees = new List<TreeFeatureDto>();
            _houses = new List<HouseFeatureDto>();
            _hasMap = false;
            ResetAreaLayers();
            ClearStaged();
            _statusMessage = "Select a map from Start.";
            _isLoading = false;
            return;
        }

        var map = await Http.GetFromJsonAsync<MapDto>(GetMapUrl());
        _trees = map?.Trees ?? new List<TreeFeatureDto>();
        _houses = map?.Houses ?? new List<HouseFeatureDto>();
        _hasMap = map?.Id > 0;
        LoadAreaLayers(map);
        ClearStaged();

        _statusMessage = _hasMap
            ? "Map loaded from the database."
            : "No map found. Return to Start and click New Map.";
        _isLoading = false;
    }

    private async Task DrawAsync()
    {
        var renderState = BuildRenderState();
        await JS.InvokeVoidAsync("inkAndRealmDemo.drawMap", CanvasId, renderState);
    }

    private Task SelectPlacement(PlacementType placementType)
    {
        _placementType = placementType;
        return Task.CompletedTask;
    }

    private void SelectTool(MapToolType tool)
    {
        _activeTool = tool;
        _statusMessage = ActiveToolDefinition.IsImplemented
            ? $"{ActiveToolDefinition.Label} tool selected."
            : $"{ActiveToolDefinition.Label} tool is not available yet.";
    }

    private void EnsureAreaLayers()
    {
        if (_areaLayers.Count == 0)
        {
            var layer = new AreaLayerDto
            {
                LayerKey = "water",
                FeatureType = "Water"
            };
            _areaLayers.Add(layer);
            _activeAreaLayer = layer;
        }
        else if (_activeAreaLayer is null)
        {
            _activeAreaLayer = _areaLayers[0];
        }
    }

    private void LoadAreaLayers(MapDto? map)
    {
        _areaLayers.Clear();
        if (map?.AreaLayers is not null && map.AreaLayers.Count > 0)
        {
            _areaLayers.AddRange(map.AreaLayers);
        }

        EnsureAreaLayers();
    }

    private void ResetAreaLayers()
    {
        _areaLayers.Clear();
        _activeAreaLayer = null;
        EnsureAreaLayers();
    }

    private void StartBrushStroke(MouseEventArgs args)
    {
        EnsureAreaLayers();
        _isDrawing = true;
        _activeStroke = new AreaStrokeDto
        {
            Tool = "Brush",
            Radius = BrushRadius
        };
        AddBrushPoint((float)args.OffsetX, (float)args.OffsetY);
        _statusMessage = $"Painting {_activeAreaLayer?.FeatureType ?? "area"}...";
    }

    private void AddBrushPoint(float x, float y)
    {
        if (_activeStroke is null)
        {
            return;
        }

        if (_activeStroke.Points.Count == 0)
        {
            _activeStroke.Points.Add(new MapPointDto { X = x, Y = y });
            return;
        }

        var last = _activeStroke.Points[^1];
        var dx = x - last.X;
        var dy = y - last.Y;
        var minDistance = _activeStroke.Radius * 0.5f;
        if ((dx * dx) + (dy * dy) >= minDistance * minDistance)
        {
            _activeStroke.Points.Add(new MapPointDto { X = x, Y = y });
        }
    }

    private void CommitBrushStroke()
    {
        if (_activeStroke is null || _activeAreaLayer is null)
        {
            _activeStroke = null;
            _isDrawing = false;
            return;
        }

        if (_activeStroke.Points.Count > 0)
        {
            _activeAreaLayer.Strokes.Add(_activeStroke);
            _stagedWaterStrokes.Add(_activeStroke);
            _statusMessage = $"Painted {_activeAreaLayer.FeatureType} layer.";
        }

        _activeStroke = null;
        _isDrawing = false;
    }

    private string GetMapUrl()
    {
        var sessionToken = UserState.CurrentUser?.SessionToken;
        if (!string.IsNullOrWhiteSpace(sessionToken))
        {
            return $"api/demo-map/{MapId}?sessionToken={Uri.EscapeDataString(sessionToken)}";
        }

        var userId = UserState.CurrentUser?.UserId;
        return userId is null ? $"api/demo-map/{MapId}" : $"api/demo-map/{MapId}?userId={userId.Value}";
    }

    private void OnUserChanged()
    {
        _ = InvokeAsync(async () =>
        {
            await LoadMapAsync();
            await DrawAsync();
            StateHasChanged();
        });
    }

    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }

    public void Dispose()
    {
        UserState.Changed -= OnUserChanged;
    }

    private void ClearStaged()
    {
        _stagedTrees.Clear();
        _stagedHouses.Clear();
        _stagedWaterStrokes.Clear();
        _hasLastPlacement = false;
    }

    private MapRenderStateDto BuildRenderState()
    {
        var pointFeatures = new List<MapPointFeatureDto>();

        foreach (var tree in _trees)
        {
            pointFeatures.Add(new MapPointFeatureDto
            {
                FeatureType = "Tree",
                X = tree.X,
                Y = tree.Y,
                StyleKey = tree.TreeType,
                IsStaged = false
            });
        }

        foreach (var house in _houses)
        {
            pointFeatures.Add(new MapPointFeatureDto
            {
                FeatureType = "House",
                X = house.X,
                Y = house.Y,
                StyleKey = house.HouseType,
                IsStaged = false
            });
        }

        foreach (var tree in _stagedTrees)
        {
            pointFeatures.Add(new MapPointFeatureDto
            {
                FeatureType = "Tree",
                X = tree.X,
                Y = tree.Y,
                StyleKey = tree.TreeType,
                IsStaged = true
            });
        }

        foreach (var house in _stagedHouses)
        {
            pointFeatures.Add(new MapPointFeatureDto
            {
                FeatureType = "House",
                X = house.X,
                Y = house.Y,
                StyleKey = house.HouseType,
                IsStaged = true
            });
        }

        return new MapRenderStateDto
        {
            PointFeatures = pointFeatures,
            AreaLayers = new List<AreaLayerDto>(_areaLayers),
            ActiveStroke = _activeStroke
        };
    }

    private enum PlacementType
    {
        Tree,
        House
    }

    private enum MapToolType
    {
        Point,
        Brush,
        Polygon,
        Eraser,
        Edit,
        Duplicate,
        Undo
    }

    private sealed record ToolDefinition(MapToolType Tool, string Label, string Description, bool IsImplemented);
}
