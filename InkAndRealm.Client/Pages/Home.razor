@page "/"
@using System.Net.Http.Json
@using InkAndRealm.Shared
@inject HttpClient Http
@inject IJSRuntime JS

<PageTitle>Ink & Realm Demo</PageTitle>

<div class="container py-4">
    <h1 class="mb-3">Ink & Realm: Tree Placement Demo</h1>
    <p class="text-muted">
        Click on the canvas to choose a tree location, then save it to the server.
    </p>

    <div class="d-flex gap-3 align-items-start flex-wrap">
        <div class="border rounded shadow-sm p-2 bg-white">
            <canvas id="@CanvasId"
                    width="640"
                    height="360"
                    class="border"
                    @onmousedown="HandleCanvasClick">
            </canvas>
        </div>

        <div class="flex-grow-1">
            <div class="mb-3">
                <div><strong>Selected Position:</strong></div>
                <div>@(_hasPending ? $"{_pendingX:0}, {_pendingY:0}" : "Click the canvas to select a position.")</div>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary"
                        disabled="@(!_hasPending || _isSaving)"
                        @onclick="SaveTreeAsync">
                    Save Tree
                </button>
                <button class="btn btn-outline-secondary"
                        disabled="@(_isLoading)"
                        @onclick="ReloadAsync">
                    Reload Map
                </button>
            </div>

            @if (!string.IsNullOrWhiteSpace(_statusMessage))
            {
                <div class="alert alert-info mt-3">@_statusMessage</div>
            }
        </div>
    </div>
</div>

@code {
    private const string CanvasId = "map-demo-canvas";
    private List<TreeFeatureDto> _trees = new();
    private float _pendingX;
    private float _pendingY;
    private bool _hasPending;
    private bool _isLoading;
    private bool _isSaving;
    private string _statusMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadMapAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await DrawAsync();
        }
    }

    private async Task HandleCanvasClick(MouseEventArgs args)
    {
        _pendingX = (float)args.OffsetX;
        _pendingY = (float)args.OffsetY;
        _hasPending = true;
        _statusMessage = $"Selected {_pendingX:0}, {_pendingY:0}.";
        await DrawAsync();
    }

    private async Task SaveTreeAsync()
    {
        if (!_hasPending)
        {
            return;
        }

        _isSaving = true;
        _statusMessage = "Saving tree to the server...";

        var response = await Http.PostAsJsonAsync("api/demo-map/tree", new TreeFeatureDto
        {
            X = _pendingX,
            Y = _pendingY,
            TreeType = "Oak"
        });

        if (response.IsSuccessStatusCode)
        {
            var map = await response.Content.ReadFromJsonAsync<MapDto>();
            _trees = map?.Trees ?? new List<TreeFeatureDto>();
            _statusMessage = "Tree saved and loaded from the database.";
            _hasPending = false;
            await DrawAsync();
        }
        else
        {
            _statusMessage = "Failed to save the tree.";
        }

        _isSaving = false;
    }

    private async Task ReloadAsync()
    {
        await LoadMapAsync();
        await DrawAsync();
    }

    private async Task LoadMapAsync()
    {
        _isLoading = true;
        _statusMessage = "Loading map from the server...";

        var map = await Http.GetFromJsonAsync<MapDto>("api/demo-map");
        _trees = map?.Trees ?? new List<TreeFeatureDto>();

        _statusMessage = "Map loaded from the database.";
        _isLoading = false;
    }

    private async Task DrawAsync()
    {
        await JS.InvokeVoidAsync("inkAndRealmDemo.drawTrees", CanvasId, _trees, _pendingX, _pendingY, _hasPending);
    }
}
